<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="250dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/card_item_1"
        android:layout_width="180dp"
        android:background="@drawable/carditem_imgback"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_height="200dp">


        <ImageView
            android:layout_width="300dp"
            android:layout_height="450dp"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/headava"   />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="450dp"
            android:id="@+id/upava"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp"
            app:srcCompat="@drawable/upava"    />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="450dp"
            android:id="@+id/downava"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="0dp"
            app:srcCompat="@drawable/downava"   />

        <ImageView
            android:id="@+id/imgUp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_background_dashboard1"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/imgOut"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/button_background_dashboard1"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher" />

        <ImageView
            android:id="@+id/imgDown"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/imgUp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="24dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:scaleType="centerCrop"
            android:background="@drawable/button_background_dashboard1"
            />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>